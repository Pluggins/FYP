
@{
    ViewData["Title"] = "Index";
}

@using System.Globalization;
@{

    NumberFormatInfo nfi = new CultureInfo("ms-MY", false).NumberFormat;
    nfi.CurrencyDecimalDigits = 2;
}
@model FYP.Models.ViewModels.MyOrderViewModel

<div style="height: 120px;background-color: #624949;position: relative">
    <div style="position:absolute; text-align:center; width:100%; font-size:40px; color:white; top:30%">
        My Orders
    </div>
</div>

<div style="padding:30px 50px;">
    <div>
        <table class="table table-striped table-bordered" style="background-color:white;" id="orderList">
            <thead>
                <tr>
                    <th>Order ID</th>
                    <th>Order Date</th>
                    <th>Order Amount</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Order item in Model.Orders)
                {
                    <tr>
                        <td><a href="/MyOrder/@item.Id">@item.Id</a></td>
                        <td>@item.DateCreated</td>
                        <td>@item.Amount.ToString("C", nfi)</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script src="~/js/myorder.js"></script>