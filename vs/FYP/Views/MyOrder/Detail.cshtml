
@{
    ViewData["Title"] = "Detail";
}

@using System.Globalization;
@{

    NumberFormatInfo nfi = new CultureInfo("ms-MY", false).NumberFormat;
    nfi.CurrencyDecimalDigits = 2;
}
@model FYP.Models.MyOrderDetailViewModel

<div class="theme-title">
    <div>
        Order Detail
    </div>
</div>
<div style="padding:30px 50px;">
    <div class="bread-crumb"><span><a href="/MyOrder">MyOrders</a></span><span class="bread-separator">-></span><span class="bread-target"><a href="/Order/@Model.OrderId">@Model.OrderId</a></span></div>

    <div>
        <table class="table table-striped table-bordered" style="background-color:white;" id="orderItemList">
            <thead>
                <tr>
                    <th>Item Name</th>
                    <th>Quantity</th>
                    <th>Price/unit</th>
                </tr>
            </thead>
            <tbody>
                @foreach (OrderItem item in Model.OrderItems)
                {
                    <tr>
                        <td>@item.MenuItem.Name</td>
                        <td>@item.Quantity</td>
                        <td>@item.UnitPrice.ToString("C", nfi)</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>